<div class="row">
  <div class="col-md-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        {{sort-labels isSorted=isSorted action="sort"}}
        <h3 class="panel-title" align="center"> Labels </h3>
      </div>
      <div class="panel-body">
        {{#if 'isSorted'}}
          {{#view 'select-item'}}
            {{#each sortedContent}}
              {{#link-to 'pressurelabel' this class="list-group-item" }}
                {{id}}
                <span id="pointer" class="pull-right"></span>
                <span class="label label-success pull-right">
                    {{repeat}}
                  </span>
              {{/link-to}}
            {{/each}}
          {{/view}}
        {{else}}
          {{#view 'select-item'}}
            {{#each labels}}
              {{#link-to 'pressurelabel' this class="list-group-item" }}
                {{id}}
                <span id="pointer" class="pull-right"></span>
                <span class="label label-success pull-right">
                    {{repeat}}
                  </span>
              {{/link-to}}
            {{/each}}
          {{/view}}
        {{/if}}
      </div>
    </div>
  </div>
  <div class="col-md-9">
    {{outlet}}
  </div>
</div>
